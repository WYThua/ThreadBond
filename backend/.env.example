# 环境配置示例文件
# 复制此文件为 .env 并填入实际配置值

# 应用环境
NODE_ENV=development

# 服务端口
PORT=3000

# 数据库配置
DATABASE_URL="mysql://threadbond_user:threadbond_pass_2024@localhost:3306/threadbond_db"

# Redis 配置
REDIS_URL="redis://localhost:6379"

# JWT 密钥
JWT_SECRET="threadbond_jwt_secret_key_2024_very_secure"

# 前端 URL
FRONTEND_URL="http://localhost:8080"

# 邮件服务配置
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# AI 服务配置
OPENAI_API_KEY="your-openai-api-key"
OPENAI_API_BASE="https://api.openai.com/v1"

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp,audio/mp3,audio/wav"

# 安全配置
BCRYPT_ROUNDS=12
SESSION_SECRET="threadbond_session_secret_2024"

# 日志配置
LOG_LEVEL="info"
LOG_FILE="logs/app.log"